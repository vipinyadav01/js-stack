{
  "name": "create-js-stack",
  "version": "1.2.1",
  "description": "A powerful, modern CLI tool for scaffolding production-ready JavaScript full-stack projects with extensive customization options and best practices built-in.",
  "type": "module",
  "packageManager": "npm@11.7.0",
  "workspaces": [
    "web"
  ],
  "main": "dist/index.js",
  "bin": {
    "create-js-stack": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:cli": "tsdown src/cli.ts --format esm --clean && tsdown src/index.ts --format esm",
    "dev": "turbo run dev",
    "dev:cli": "tsx src/cli.ts",
    "dev:web": "turbo run dev --filter=web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "npx husky install 2>/dev/null || echo 'Husky not required for production'",
    "build:release": "node scripts/build.js",
    "publish:npm": "npm run build:release && npm publish",
    "publish:npm:dry": "npm run build:release && npm publish --dry-run",
    "release:all": "npm run version-packages && npm run build:release && git add . && git commit -m 'chore(release): version packages' && git push origin main",
    "postinstall": "echo 'Installation complete!'"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "javascript",
    "fullstack",
    "boilerplate",
    "generator",
    "react",
    "express",
    "nodejs"
  ],
  "author": "Vipin Yadav",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vipinyadav01/js-stack.git"
  },
  "bugs": {
    "url": "https://github.com/vipinyadav01/js-stack/issues"
  },
  "homepage": "https://js-stack.pages.dev",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@biomejs/biome": "^1.8.0",
    "boxen": "^7.1.1",
    "chalk": "^4.1.2",
    "chalk-animation": "^2.0.3",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^2.9.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "globby": "^13.2.2",
    "gradient-string": "^2.0.2",
    "handlebars": "^4.7.8",
    "inquirer": "^12.9.6",
    "nanospinner": "^1.2.2",
    "ora": "^7.0.1",
    "posthog-node": "^5.17.4",
    "terminal-link": "^2.1.1",
    "tinyglobby": "^0.2.9",
    "tsdown": "^0.2.2",
    "validate-npm-package-name": "^5.0.1",
    "yup": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.27.1",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^20.10.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "esbuild": "^0.19.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
