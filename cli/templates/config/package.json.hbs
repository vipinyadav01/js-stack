{
  "name": "{{kebabCase projectName}}",
  "version": "1.0.0",
  "description": "{{titleCase projectName}} - A JavaScript stack application",
  "main": "{{#if typescript}}dist/index.js{{else}}src/index.js{{/if}}",
  "type": "module",
  "scripts": {{scripts (object
    "dev" (if (eq frontend "nextjs") "next dev" "vite dev")
    "build" (if (eq frontend "nextjs") "next build" "vite build")
    "start" (if (eq frontend "nextjs") "next start" "node dist/index.js")
    "test" (if (eq testFramework "vitest") "vitest" "jest")
    "lint" "eslint src --ext .js,.jsx,.ts,.tsx"
    "format" "prettier --write src"
  )}},
  "dependencies": {
{{#each (frameworkDeps frontend typescript).dependencies}}
    "{{this}}": "{{resolveVersion this}}"{{#unless @last}},{{/unless}}
{{/each}}
{{#if database}}
  {{#switch database}}
    {{#case "mongodb"}}
    "mongoose": "{{resolveVersion 'mongoose'}}"{{#unless @last}},{{/unless}}
    {{/case}}
    {{#case "postgresql"}}
    "pg": "{{resolveVersion 'pg'}}"{{#unless @last}},{{/unless}}
    {{/case}}
    {{#case "mysql"}}
    "mysql2": "{{resolveVersion 'mysql2'}}"{{#unless @last}},{{/unless}}
    {{/case}}
  {{/switch}}
{{/if}}
  },
  "devDependencies": {
{{#each (frameworkDeps frontend typescript).devDependencies}}
    "{{this}}": "{{resolveVersion this}}"{{#unless @last}},{{/unless}}
{{/each}}
{{#if typescript}}
    "typescript": "{{resolveVersion 'typescript'}}",
{{/if}}
{{#if (eq testFramework "jest")}}
    "jest": "{{resolveVersion 'jest'}}",
{{else if (eq testFramework "vitest")}}
    "vitest": "{{resolveVersion 'vitest'}}",
{{/if}}
    "eslint": "{{resolveVersion 'eslint'}}",
    "prettier": "{{resolveVersion 'prettier'}}"
  },
  "keywords": [
    "{{kebabCase projectName}}",
    "{{lowercase frontend}}",
    "{{lowercase backend}}",
    "javascript",
    "web-development"
  ],
  "author": "{{author}}",
  "license": "{{license}}",
  "engines": {
    "node": ">=18.0.0"
  }
}