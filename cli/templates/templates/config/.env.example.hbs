# Environment Variables for {{projectName}}

# Application
NODE_ENV=development
PORT={{backendPort}}
{{#if frontend}}
FRONTEND_PORT={{frontendPort}}
{{/if}}

# Database Configuration
{{#if database.postgres}}
DATABASE_URL=postgresql://postgres:password@localhost:5432/{{projectName}}
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME={{projectName}}
{{/if}}
{{#if database.mysql}}
DATABASE_URL=mysql://root:password@localhost:3306/{{projectName}}
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME={{projectName}}
{{/if}}
{{#if database.mongodb}}
MONGODB_URI=mongodb://localhost:27017/{{projectName}}
DB_HOST=localhost
DB_PORT=27017
DB_USER=admin
DB_PASSWORD=password
DB_NAME={{projectName}}
{{/if}}
{{#if database.sqlite}}
DATABASE_URL=file:./dev.db
{{/if}}

{{#if useRedis}}
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
{{/if}}

{{#if useJWT}}
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
{{/if}}

{{#if useAuth}}
# Authentication
AUTH_SECRET=your-auth-secret-change-this-in-production
{{/if}}

# CORS Configuration
CORS_ORIGIN=http://localhost:{{frontendPort}}

# Rate Limiting
RATE_LIMIT=100

# Logging
LOG_LEVEL=info

{{#if useEmail}}
# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@{{projectName}}.com
{{/if}}

{{#if useCloudinary}}
# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
{{/if}}

{{#if useStripe}}
# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
{{/if}}
