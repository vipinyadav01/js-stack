# Development Dockerfile for {{frontend}} frontend

FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE {{frontendPort}}

# Development command
{{#if frontend.nextjs}}
CMD ["npm", "run", "dev"]
{{else}}
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
{{/if}}
