# Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost

{{#if (eq database 'none')}}
{{else}}
# Database Configuration
{{#if (eq database 'postgres')}}
DATABASE_URL="postgresql://username:password@localhost:5432/{{projectName}}"
{{else if (eq database 'mongodb')}}
MONGODB_URI="mongodb://localhost:27017/{{projectName}}"
{{else if (eq database 'sqlite')}}
DATABASE_URL="file:./dev.db"
{{else if (eq database 'supabase')}}
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
{{else if (eq database 'planetscale')}}
DATABASE_URL="mysql://username:password@host:port/database"
{{/if}}
{{/if}}

{{#if (eq auth 'none')}}
{{else}}
# Authentication
{{#if (eq auth 'jwt')}}
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="7d"
{{else if (eq auth 'auth0')}}
AUTH0_DOMAIN="your-auth0-domain"
AUTH0_CLIENT_ID="your-auth0-client-id"
AUTH0_CLIENT_SECRET="your-auth0-client-secret"
{{else if (eq auth 'passport')}}
PASSPORT_SECRET="your-passport-secret"
{{else if (eq auth 'nextauth')}}
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"
{{else if (eq auth 'supabase')}}
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
{{else if (eq auth 'lucia')}}
LUCIA_SECRET="your-lucia-secret"
{{else if (eq auth 'better-auth')}}
BETTER_AUTH_SECRET="your-better-auth-secret"
BETTER_AUTH_URL="http://localhost:3000"
{{/if}}
{{/if}}

{{#if (eq deployment 'none')}}
{{else}}
# Deployment
{{#if (eq deployment 'vercel')}}
VERCEL_URL="your-vercel-url"
{{else if (eq deployment 'netlify')}}
NETLIFY_URL="your-netlify-url"
{{else if (eq deployment 'cloudflare')}}
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
{{else if (eq deployment 'aws')}}
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
{{/if}}
{{/if}}

