{
  "version": 2,
  "builds": [
    {{#if (eq frontend.includes 'nextjs')}}
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }{{#unless (eq backend 'none')}},{{/unless}}
    {{/if}}
    {{#unless (eq backend 'none')}}
    {
      "src": "apps/server/package.json",
      "use": "@vercel/node"
    }
    {{/unless}}
  ],
  "routes": [
    {{#if (eq frontend.includes 'nextjs')}}
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }{{#unless (eq backend 'none')}},{{/unless}}
    {{/if}}
    {{#unless (eq backend 'none')}}
    {
      "src": "/api/(.*)",
      "dest": "apps/server/api/$1"
    }
    {{/unless}}
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
