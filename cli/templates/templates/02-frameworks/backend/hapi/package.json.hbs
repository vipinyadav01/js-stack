{
  "name": "{{projectName}}-backend",
  "version": "1.0.0",
  "description": "Hapi backend API for {{projectName}}",
  "main": "src/server.js",
  "type": "{{#if useESModules}}module{{else}}commonjs{{/if}}",
  "scripts": {
    "start": "node {{#if useTypeScript}}dist/server.js{{else}}src/server.js{{/if}}",
    "dev": "{{#if useTypeScript}}tsx watch src/server.ts{{else}}nodemon src/server.js{{/if}}",
    "build": "{{#if useTypeScript}}tsc{{else}}echo 'No build step required'{{/if}}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext {{#if useTypeScript}}ts{{else}}js{{/if}}",
    "format": "prettier --write \"src/**/*.{{#if useTypeScript}}ts{{else}}js{{/if}}\"",
    {{#if usePrisma}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    {{/if}}
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "hapi",
    "api",
    "backend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/cors": "^1.0.1",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "dotenv": "^16.3.1",
    {{#if useJWT}}
    "hapi-auth-jwt2": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    {{/if}}
    {{#if usePrisma}}
    "@prisma/client": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize": "^6.35.2",
    {{#if database.postgres}}
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    {{/if}}
    {{#if database.mysql}}
    "mysql2": "^3.6.5",
    {{/if}}
    {{#if database.sqlite}}
    "sqlite3": "^5.1.6",
    {{/if}}
    {{/if}}
    {{#if useMongoose}}
    "mongoose": "^8.0.3",
    {{/if}}
    {{#if useRedis}}
    "redis": "^4.6.10",
    {{/if}}
    {{#if useSocketIO}}
    "socket.io": "^4.7.4",
    {{/if}}
    "winston": "^3.11.0"
  },
  "devDependencies": {
    {{#if useTypeScript}}
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/hapi": "^18.0.14",
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.6.2",
    {{/if}}
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    {{#if usePrisma}}
    "prisma": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize-cli": "^6.6.2",
    {{/if}}
    "@hapi/lab": "^25.2.0",
    "@hapi/code": "^9.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
