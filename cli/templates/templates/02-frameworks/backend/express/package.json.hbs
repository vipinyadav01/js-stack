{
  "name": "{{projectName}}-backend",
  "version": "1.0.0",
  "description": "Backend API for {{projectName}}",
  "main": "src/server.js",
  "type": "{{#if useESModules}}module{{else}}commonjs{{/if}}",
  "scripts": {
    "start": "node {{#if useTypeScript}}dist/server.js{{else}}src/server.js{{/if}}",
    "dev": "{{#if useTypeScript}}tsx watch src/server.ts{{else}}nodemon src/server.js{{/if}}",
    "build": "{{#if useTypeScript}}tsc{{else}}echo 'No build step required'{{/if}}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext {{#if useTypeScript}}ts{{else}}js{{/if}}",
    "format": "prettier --write \"src/**/*.{{#if useTypeScript}}ts{{else}}js{{/if}}\"",
    {{#if usePrisma}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    {{/if}}
    "clean": "rimraf dist"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.0",
    "dotenv": "^16.4.5",
    {{#if useTypeScript}}
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/node": "^22.5.5",
    {{/if}}
    {{#if useJWT}}
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    {{/if}}
    {{#if usePassport}}
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    {{/if}}
    {{#if usePrisma}}
    "@prisma/client": "^5.19.1",
    "prisma": "^5.19.1",
    {{/if}}
    {{#if useMongoose}}
    "mongoose": "^8.6.3",
    {{/if}}
    {{#if useSequelize}}
    "sequelize": "^6.37.3",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    {{/if}}
    {{#if useRedis}}
    "redis": "^4.7.0",
    "ioredis": "^5.4.1",
    {{/if}}
    {{#if useSocketIO}}
    "socket.io": "^4.7.5",
    {{/if}}
    {{#if useBullMQ}}
    "bullmq": "^5.13.2",
    {{/if}}
    {{#if useStripe}}
    "stripe": "^16.10.0",
    {{/if}}
    {{#if useSendGrid}}
    "@sendgrid/mail": "^8.1.3",
    {{/if}}
    {{#if useAWS}}
    "@aws-sdk/client-s3": "^3.651.1",
    "@aws-sdk/s3-request-presigner": "^3.651.1",
    {{/if}}
    "joi": "^17.13.3",
    "winston": "^3.14.2",
    "express-async-errors": "^3.1.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    {{#if useTypeScript}}
    "typescript": "^5.6.2",
    "tsx": "^4.19.1",
    "ts-node": "^10.9.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    {{else}}
    "nodemon": "^3.1.4",
    {{/if}}
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    {{#if useTypeScript}}
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.5",
    {{/if}}
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
