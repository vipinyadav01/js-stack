{
  "name": "{{projectName}}-frontend",
  "version": "1.0.0",
  "description": "Svelte frontend for {{projectName}}",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev --port {{frontendPort}}",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "keywords": [
    "svelte",
    "frontend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.20.4",
    {{#if useTypeScript}}
    "@sveltejs/adapter-static": "^2.0.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "svelte-check": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    {{/if}}
    "svelte": "^4.0.5",
    "vite": "^4.4.2",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "vitest": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "jsdom": "^22.1.0"
  },
  "dependencies": {
    {{#if useTailwind}}
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    {{/if}}
    {{#if useAuth}}
    "@auth/sveltekit": "^0.3.0",
    {{/if}}
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
