{
  "name": "{{projectName}}-frontend",
  "version": "1.0.0",
  "description": "Vue.js frontend for {{projectName}}",
  "main": "src/main.{{#if useTypeScript}}ts{{else}}js{{/if}}",
  "type": "module",
  "scripts": {
    "dev": "vite --port {{frontendPort}}",
    "build": "{{#if useTypeScript}}vue-tsc && {{/if}}vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "cypress run",
    "test:e2e:dev": "cypress open",
    "lint": "eslint . --ext .vue,.js{{#if useTypeScript}},.ts{{/if}} --fix",
    "format": "prettier --write \"src/**/*.{vue,js{{#if useTypeScript}},ts{{/if}}}\"",
    "type-check": "{{#if useTypeScript}}vue-tsc --noEmit{{else}}echo 'TypeScript not configured'{{/if}}"
  },
  "keywords": [
    "vue",
    "frontend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.11",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    {{#if useTailwind}}
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    {{/if}}
    {{#if useAxios}}
    "axios": "^1.6.2",
    {{/if}}
    {{#if useAuth}}
    "@vueuse/core": "^10.7.0",
    {{/if}}
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "vite": "^5.0.10",
    {{#if useTypeScript}}
    "@vue/tsconfig": "^0.5.1",
    "typescript": "^5.3.3",
    "vue-tsc": "^1.8.25",
    "@types/node": "^20.10.5",
    {{/if}}
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    {{#if useTypeScript}}
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    {{/if}}
    "prettier": "^3.1.1",
    "vitest": "^1.1.0",
    "@vue/test-utils": "^2.4.3",
    "cypress": "^13.6.2",
    "jsdom": "^23.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
