{
  "name": "{{projectName}}-frontend",
  "version": "1.0.0",
  "description": "Nuxt.js frontend for {{projectName}}",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port {{frontendPort}}",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --ext .vue,.js{{#if useTypeScript}},.ts{{/if}} --fix",
    "format": "prettier --write \"**/*.{vue,js{{#if useTypeScript}},ts{{/if}},json,css,scss,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "{{#if useTypeScript}}nuxi typecheck{{else}}echo 'TypeScript not configured'{{/if}}"
  },
  "keywords": [
    "nuxt",
    "vue",
    "frontend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "nuxt": "^3.8.4",
    {{#if useTypeScript}}
    "@nuxt/typescript-build": "^3.0.2",
    "typescript": "^5.3.3",
    {{/if}}
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.19.2",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0",
    "@vue/test-utils": "^2.4.3",
    "jsdom": "^23.0.1"
  },
  "dependencies": {
    {{#if useTailwind}}
    "@nuxtjs/tailwindcss": "^6.8.4",
    "tailwindcss": "^3.3.6",
    {{/if}}
    {{#if useAuth}}
    "@sidebase/nuxt-auth": "^0.6.2",
    "@auth/core": "^0.18.6",
    {{/if}}
    {{#if usePinia}}
    "@pinia/nuxt": "^0.5.1",
    "pinia": "^2.1.7",
    {{/if}}
    {{#if useAxios}}
    "@nuxtjs/axios": "^5.13.6",
    {{/if}}
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
