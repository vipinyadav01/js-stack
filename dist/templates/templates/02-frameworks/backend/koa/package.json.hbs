{
  "name": "{{projectName}}-backend",
  "version": "1.0.0",
  "description": "Koa backend API for {{projectName}}",
  "main": "src/server.js",
  "type": "{{#if useESModules}}module{{else}}commonjs{{/if}}",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext js",
    "format": "prettier --write \"src/**/*.js\"",
    {{#if usePrisma}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    {{/if}}
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "koa",
    "api",
    "backend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.14.2",
    "koa-router": "^12.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^7.0.2",
    "koa-ratelimit": "^5.1.0",
    "koa-compress": "^5.1.1",
    "koa-logger": "^3.2.1",
    "dotenv": "^16.3.1",
    {{#if useJWT}}
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "koa-jwt": "^4.0.4",
    {{/if}}
    {{#if usePrisma}}
    "@prisma/client": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize": "^6.35.2",
    {{#if database.postgres}}
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    {{/if}}
    {{#if database.mysql}}
    "mysql2": "^3.6.5",
    {{/if}}
    {{#if database.sqlite}}
    "sqlite3": "^5.1.6",
    {{/if}}
    {{/if}}
    {{#if useMongoose}}
    "mongoose": "^8.0.3",
    {{/if}}
    {{#if useRedis}}
    "redis": "^4.6.10",
    {{/if}}
    {{#if useSocketIO}}
    "socket.io": "^4.7.4",
    {{/if}}
    "winston": "^3.11.0"
  },
  "devDependencies": {
    {{#if useTypeScript}}
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/koa": "^2.13.12",
    "@types/koa-router": "^7.4.8",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-helmet": "^6.0.5",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-logger": "^3.1.5",
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.6.2",
    {{/if}}
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    {{#if usePrisma}}
    "prisma": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize-cli": "^6.6.2",
    {{/if}}
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
