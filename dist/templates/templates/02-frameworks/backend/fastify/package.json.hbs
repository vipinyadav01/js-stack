{
  "name": "{{projectName}}-backend",
  "version": "1.0.0",
  "description": "Fastify backend API for {{projectName}}",
  "main": "src/server.js",
  "type": "{{#if useESModules}}module{{else}}commonjs{{/if}}",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext js",
    "format": "prettier --write \"src/**/*.js\"",
    {{#if usePrisma}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "node prisma/seed.js",
    {{/if}}
    {{#if useSequelize}}
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    {{/if}}
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "fastify",
    "api",
    "backend",
    "{{projectName}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "dotenv": "^16.3.1",
    {{#if useJWT}}
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "@fastify/jwt": "^7.2.4",
    {{/if}}
    {{#if usePrisma}}
    "@prisma/client": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize": "^6.35.2",
    {{#if database.postgres}}
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    {{/if}}
    {{#if database.mysql}}
    "mysql2": "^3.6.5",
    {{/if}}
    {{#if database.sqlite}}
    "sqlite3": "^5.1.6",
    {{/if}}
    {{/if}}
    {{#if useMongoose}}
    "mongoose": "^8.0.3",
    {{/if}}
    {{#if useRedis}}
    "redis": "^4.6.10",
    {{/if}}
    {{#if useSocketIO}}
    "socket.io": "^4.7.4",
    {{/if}}
    "compression": "^1.7.4",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    {{#if useTypeScript}}
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.6.2",
    {{/if}}
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    {{#if usePrisma}}
    "prisma": "^5.7.1",
    {{/if}}
    {{#if useSequelize}}
    "sequelize-cli": "^6.6.2",
    {{/if}}
    "@fastify/autoload": "^5.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
